<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical">
<include layout="@layout/view_layout_title"/>
<RelativeLayout
    android:id="@+id/rl_profile"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="20dp"
    android:background="#fff">
    <ImageView
        android:id="@+id/iv_avatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:src="@drawable/default_avatar"/>
    <TextView
        android:id="@+id/tv_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_avatar"
        android:layout_marginTop="15dp"
        android:text="用户昵称"
        android:textSize="20sp"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_nick"
        android:layout_toRightOf="@id/iv_avatar"
        android:layout_marginTop="10dp"
        android:text="用户名"/>
</RelativeLayout>
<RelativeLayout
    android:id="@+id/rl_photo"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="20dp"
    android:background="#fff">
    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_me_photo"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="相册"
        android:layout_toRightOf="@id/iv_photo"
        android:textSize="15dp"
        android:textColor="#000"/>
</RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"/>
<RelativeLayout
    android:id="@+id/rl_collect"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#fff">
    <ImageView
        android:id="@+id/iv_collect"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_me_collect"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="收藏"
        android:layout_toRightOf="@id/iv_collect"
        android:textSize="15dp"
        android:textColor="#000"/>
</RelativeLayout>
<RelativeLayout
    android:id="@+id/rl_money"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="20dp"
    android:background="#fff">
    <ImageView
        android:id="@+id/iv_money"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_me_money"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="钱包"
        android:layout_toRightOf="@id/iv_money"
        android:textSize="15dp"
        android:textColor="#000"/>
</RelativeLayout>
<RelativeLayout
    android:id="@+id/rl_smail"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="20dp"
    android:background="#fff">
    <ImageView
        android:id="@+id/iv_smail"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_me_smail"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="表情"
        android:layout_toRightOf="@id/iv_smail"
        android:textSize="15dp"
        android:textColor="#000"/>
</RelativeLayout>
<RelativeLayout
    android:id="@+id/rl_setting"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="20dp"
    android:background="#fff">
    <ImageView
        android:id="@+id/iv_setting"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/icon_me_setting"
        android:layout_margin="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="设置"
        android:layout_toRightOf="@id/iv_setting"
        android:textSize="15dp"
        android:textColor="#000"/>
</RelativeLayout>
</LinearLayout>
